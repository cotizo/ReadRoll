<html>
<head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css"> -->
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script src="/js/site.js"></script>
    <link rel="stylesheet" href="/css/site.css">

</head>
<body>
<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="header">
                    <ul>
                        <li class="brand">
                            <a href="/">READ ROLL</a>
                        </li>
                        <li>
                            <a href="https://github.com/mihai-sima/readroll">ON GITHUB</a>
                        </li>
                        <li class="submit">
                            <a href="#" data-toggle="modal" data-target="#new-post">SUBMIT</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                {{{body}}}
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="new-post" role="dialog" aria-hidden="true" aria-labelledby="new-post-label">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h2 class="modal-title" id="new-post-label">New post</h2>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <input type="text" class="form-control" id="new-post-title" placeholder="title"/>
                    </div>
                    <div class="form-group">
                        <textarea rows=10 class="form-control" id="new-post-body" placeholder="body"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="new-post-tags" placeholder="tags"/>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="new-post-url" placeholder="http://"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="newPost()">Post</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Dismiss</button>
            </div>
        </div>
    </div>
</div>
</body>
</html>